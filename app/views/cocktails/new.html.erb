<div class="container">
  <div class="row">
    <div class="col">
      <h1>Make new cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: "btn btn-primary" %>
        <br>
        <%= link_to "back to all cocktails", root_path %>
      <% end %>
    </div>
  </div>
</div>
